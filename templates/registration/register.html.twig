{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig'%}

{% block title %}BOOKING - Enregistrement{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="h3 mb-3 font-weight-normal mt-3">Cr√©er votre compte</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {'label': "Nom d'utilisateur", 'attr': {'placeholder': "Indiquez votre nom ou speudo"}} ) }}
        {{ form_row(registrationForm.plainPassword, {'label': "Votre mot de passe", 'attr': {'placeholder': "Mot de passe"}} ) }}
        {{ form_row(registrationForm.email, {'label': "Adresse email", 'attr': {'placeholder': "Indiquer votre adresse email"}} ) }}
        {{ form_row(registrationForm.agreeTerms, {'label': "J'accepte les conditions d'utilisation"} ) }}

        <button type="submit" class="btn btn-lg btn-primary mt-3">S'enregistrer</button>
    {{ form_end(registrationForm) }}
{% endblock %}
